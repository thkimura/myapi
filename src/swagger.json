"paths": {
    "/roles": {
      "post": {
        "tags": ["Roles"],
        "summary": "Create a role",
        "description": "Create a new role",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Role created.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Role already exists."
          }
        }
      },
      "get": {
        "tags": ["Roles"],
        "summary": "List all roles",
        "description": "Returns all roles paginated.",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "required": false,
            "schema": {
              "type": "number",
              "example": "page=1"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Register number",
            "required": false,
            "schema": {
              "type": "number",
              "example": "limit=15"
            },
            "style": "label"
          }
        ],
        "responses": {
          "200": {
            "description": "Success.",
            "content": {
              "application/json": {
                "example": {
                  "per_page": 15,
                  "current_page": 2,
                  "total": 1,
                  "data": [
                    {
                      "id": "1",
                      "name": "Users",
                      "created_at": "2023-10-01T00:00:00Z"
                    },
                    {
                      "id": "2",
                      "name": "Admins",
                      "created_at": "2023-10-01T00:00:00Z"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/roles/{id}": {
      "put": {
        "tags": ["Roles"],
        "summary": "Update a role",
        "description": "Update a role.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Identifyr of the role",
            "required": true,
            "schema": {
              "type": "number"
            },
            "style": "label"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                },
                "example": "Administrator"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "id": "1",
                  "name": "Administrator",
                  "created_at": "2023-10-01T00:00:00Z"
                }
              }
            }
          },
          "400": {
            "description": "Bad request."
          },
          "404": {
            "description": "Role not found."
          }
        }
      },
      "delete": {
        "tags": ["Roles"],
        "summary": "Delete  role by ID",
        "description": "Delete roles based on ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Identifier of the role",
            "required": true,
            "schema": {
              "type": "number"
            },
            "style": "label"
          }
        ],
        "responses": {
          "204": {
            "description": "No content."
          },
          "400": {
            "description": "Bad request."
          },
          "404": {
            "description": "Role not found."
          }
        }
      }
    }
  }
}
